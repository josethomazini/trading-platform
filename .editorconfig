# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[README]
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx,yml,yaml,json}]
indent_size = 2
